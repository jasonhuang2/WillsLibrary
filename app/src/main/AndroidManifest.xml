<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jasonhuang.willslibrary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/WillsLibrary">
        <activity
            android:name=".MainActivity"
            android:theme="@style/WillsLibrary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".userMainActivity" />
        <activity android:name=".catalogueMainActivity" />
        <activity android:name=".myrentalMainActivity" />
        <activity android:name=".myfinesMainActivity" />
        <activity android:name=".item" />
        <activity android:name=".itemBookActivity" />
        <activity android:name=".itemDiskActivity" />
        <activity android:name=".itemOtherActivity" />
        <activity android:name=".userCreationActivity" />
        <activity android:name=".adminAddItemActivity" />
        <activity
            android:name=".catalogueTabActivity"
            android:label="@string/title_activity_catalogue_tab"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".adminActivity" />
        <activity android:name=".returnItem" />
        <activity android:name=".adminAddOtherItemActivity"></activity>
    </application>

</manifest>