<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleTextViewBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="110dp"
        android:text="Author:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authorTextViewBox"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/authorTextView"
        android:layout_marginStart="158dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/authorTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:text="Genre:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publisherTextViewBox"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/authorTextViewBox"
        android:layout_alignTop="@+id/publisherTextView"
        android:text="TextView" />

    <TextView
        android:id="@+id/genreTextViewBox"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/authorTextViewBox"
        android:layout_alignTop="@+id/genreTextView"
        android:text="TextView" />

    <TextView
        android:id="@+id/publisherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/authorTextView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:text="Publisher:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/publishingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/authorTextViewBox"
        android:layout_marginTop="193dp"
        android:text="Dategoeshere" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="226dp"
        android:text="Description:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionTextViewBox"
        android:layout_width="300dp"
        android:layout_height="143dp"
        android:layout_below="@+id/descriptionTextView"
        android:layout_centerHorizontal="true"
        android:maxLines="200"
        android:scrollbars = "vertical"
        android:text="TextView" />

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/titleTextViewBox"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/publishingdatetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/authorTextView"
        android:layout_alignTop="@+id/publishingDateTextView"
        android:text="Published On:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/availableForRentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/descriptionTextViewBox"
        android:layout_marginBottom="80dp"
        android:text="Availability"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/inStockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/descriptionTextViewBox"
        android:layout_marginBottom="80dp"
        android:text="Availability"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/notAvailableForRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/publishingdatetextView"
        android:layout_alignTop="@+id/availableForRentText"
        android:text="RENTED"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/rentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/descriptionTextViewBox"
        android:layout_marginBottom="18dp"
        android:onClick="onRentalClick"
        android:text="RENT ITEM" />

    <TextView
        android:id="@+id/overdueMessage"
        android:layout_width="123dp"
        android:layout_height="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="88dp"
        android:text="You currently have a outstanding balance. Please visit the front desk"
        android:textAlignment="center"
        android:visibility="invisible" />
</RelativeLayout>